import requests
from requests import HTTPError


def send_request(status_code=200):
    response = requests.get("https://httpstat.us/%d" % status_code)
    response.raise_for_status()
    return response.status_code


respons_code = 200
while True:
    try:
        code = int(input('Введите http код для проверки >'))
        if type(code) == int:
            break
    except ValueError:
        print('Необходимо ввести целое число!!!')

try:
    respons_code = send_request(code)
except HTTPError as ex:
    print('Произошла ошибка', ex)
    respons_code = ex.response.status_code
finally:
    print(f'Получен код: {respons_code}')
